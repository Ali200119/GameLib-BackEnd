@model IEnumerable<Game>

@{
        ViewBag.Title = $"Search Resluts for \"{ViewBag.SearchText}\"";
}

@section CSS {
    <link rel="stylesheet" href="~/assets/scss/search/product-search-results.css">
}

@section NavBar {
    <ul class="navbar">
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
        <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
        <li><a asp-controller="About" asp-action="Index">About</a></li>
    </ul>
}

<section id="search-results">
    <div class="container">
        @if (Model.Count() != 0)
        {
            <div class="items">
                @foreach (var game in Model)
                {
                    <div class="item">
                        <a class="image" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">
                            <img src="~/assets/img/games/@game.GameImages.FirstOrDefault(gi => gi.IsMain).Name">
                        </a>

                        <a class="name" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">
                            <h3>@game.Name</h3>
                        </a>

                        <div class="price-view">
                            <div class="price">
                                <span>$</span>
                                <span>@game.Price</span>
                            </div>

                            <a class="view" asp-controller="Shop" asp-action="Details" asp-route-id="@game.Id">View Game</a>
                        </div>
                    </div>
                }
            </div>
        }

        else
        {
            <div class="not-found">
                <h1 class="title">Nothing Found</h1>

                <p class="description">Sorry, but nothing matched your search terms. Please try again with some different keywords.</p>

                <a asp-controller="Home" asp-action="Index" class="btn-shine">Back to Home</a>
            </div>
        }
    </div>
</section>

<section id="up">
    <div class="arrow">
        <i class="fa-solid fa-arrow-up"></i>
    </div>
</section>